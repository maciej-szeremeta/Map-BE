{
  "name": "mega",
  "version": "0.1.0",
  "description": "Projekt TS",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rimraf dist/**",
    "format": "prettier --config .prettierrc --write ./src",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "copy:static": "mkdir -p dist && cp -R src/static dist/static",
    "build": "set NODE_ENV=prod && set NODE_URL= && tsc --project tsconfig.json",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "start:dev2": "nodemon --config nodemon.json --exec \"npm run build && npm run start\"",
    "start:dev": "tsnd src/index.ts",
    "build:prod": "npm run clean && npm run copy:static && npm run build",
    "test": "jest"
  },
  "keywords": [],
  "author": "Maciej Szeremeta",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.14",
    "@types/nodemon": "^1.19.2",
    "@types/prettier": "^2.7.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.5.2",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "uuid": "^8.3.2"
  }
}
